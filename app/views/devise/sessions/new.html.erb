<h2> <%= t('devise.sessions.Log in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label t('devise.registrations.Email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.Password (6 characters minimum)')%><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t('devise.sessions.Remember me') %>
    </div>
  <% end %>

  <div class="actions">
    <%= button_tag t('devise.sessions.Log in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>