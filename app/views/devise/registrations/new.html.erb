<%= stylesheet_link_tag 'devise' %>

<h2> <%= t('devise.registrations.Sign up') %></h2>

<div class="sign_up">
  <div class="signup_logo">
  -----------logo toka--------
  </div>

  <div class="sign_up_form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label t('devise.registrations.Name') %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.Age') %><br />
    <%= f.text_field :age, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.Email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.Password (6 characters minimum)')%><br />
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.Password confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.Introduce') %><br />
    <%= f.text_area :introduce, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.Image') %><br />
    <%= f.file_field :images, multiple: true %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.Resemble') %><br />
    <%= f.text_field :tag_list, value: @user.tag_list.join(','), class: "form-control" %>
  </div>

  <div class="actions">
    <%= button_tag t('devise.registrations.Sign up') %>
  </div>
<% end %>
</div>

<%#= render "devise/shared/links" %>