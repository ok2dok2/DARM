<h2> <%= t('devise.registrations.Edit') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.label t('devise.registrations.Name') %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.Email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <div class="field">
    <%= f.label t('devise.registrations.Introduce') %><br />
    <%= f.text_area :introduce, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.Image') %><br />
    <%= f.file_field :images, multiple: true %>
  </div>

  <div class="field">
    <%= f.label t('devise.registrations.Resemble')%><br />
    <%= f.text_field :tag_list, value: @user.tag_list.join(','), class: "form-control" %>
  </div>

  <div class="actions">
    <%= button_tag t('devise.registrations.Update') %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%= link_to "Back", :back %>