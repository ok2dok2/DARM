<div id="messages_area">
    <% @messages.each do |message| %>
    <% if message.body.present? %>
      <div class="item">
        <div class="content">
        <div class="item <%= message.user == current_user ? 'right' : 'left' %>">
          <div class="header"><%= l DateTime.strptime(message.message_time, "%m/%d/%y at %I:%M %p"), format: :short %><%= message.read ? '既読' : '未読' %></div>
          <div class="list">
            <% if message.user == current_user %>
              <div class="item right">
                <div id="right">
                <%= message.body%>
                </div>
                <% if message.image.present? %>
                  <%= image_tag message.image.url, class: "dmimage" %>
                <% end %>
              </div>
            <% else %>
              <div class="item left">
                <%= image_tag message.user.first_image, class: "talk_icon" %>
                <div id="left">
                <%= message.body %>
                </div>
                <% if message.image.present? %>
                  <%= image_tag message.image.url, class: "dmimage" %>
                <% end %>
              </div>
            <% end %>
                          <%# if message.user == current_user %>
                <%#= message.read ? '既読' : '未読' %>
              <%# end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>