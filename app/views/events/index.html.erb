<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
<h2>event index</h2>

  <%= form_tag events_path, method: :get do %>
  <%= text_field_tag :tag, params[:tag], placeholder: "オフ会検索", class:"search_container" %>
  <button class="event_button" type="submit">
    <i class="bi bi-search-heart"></i>
  </button>
  <% end %>



  

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal1">
  make event
</button>
<div class="modal fade" id="modal1" tabindex="-1"
      role="dialog" aria-labelledby="label1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centere" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="label1">make event</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @event) do |form| %>
          <div class="field">
            <%= form.label :event_name %>
            <%= form.text_field :name %>
          </div>
          <div class="field">
            <%= form.label :place %>
            <%= form.text_field :place %>
          </div>
          <div class="field">
            <%= form.label :time %>
            <%= form.text_field :start_at %>
          </div>
          <div class="field">
            <%= form.label :introduce %>
            <%= form.text_area :introduce %>
          </div>
          <div class="field">
            <%= form.label :contact %>
            <%= form.text_field :contact %>
          </div>
          <div class="field">
            <%= form.label :tag %><br />
            <%= form.text_field :tag_list, value: @event.tag_list.join(','), class: "form-control" %>
          </div>
          <div class="field">
            <%= form.label :image %><br />
            <%= form.file_field :image %>
          </div>

        <div class="actions">
          <%= button_tag t('button_event_create') %>
        </div>
        <% end %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">OK</button>
      </div>
    </div>
  </div>
</div>

<% @events.each do |event| %>
  <td><%= image_tag event.image.url%></td>
  <td><%= event.name%></td>
  <td><%= event.place%></td>
  <td><%= event.start_at%></td>
  <td><%= event.introduce%></td>
  <td><%= event.contact%></td>
  <td><%= render 'events/tag_list', tag_list: event.tag_list %></td>
<% end %>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>