<table>
  <% posts.each do |post| %>
    <% if post.id.present? %>
      <tr>
        <td><%= post.user.name %></td>
      </tr>
      <tr>
        <td><%= image_tag post.user.first_image, class: "icon" %></td>
        <td><%= post.content %></td>
        <% if post.image.present? %>
        <td><%=image_tag post.image.url, class:"post_image" %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
</table>
