<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal1">
  make topic
</button>
<div class="modal fade" id="modal1" tabindex="-1"
      role="dialog" aria-labelledby="label1" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="label1">make topic</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @topic) do |form| %>
          <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name %>
          </div>

          <div class="field">
            <%= form.label :image %>
            <%= form.file_field :image %>
          </div>

          <div class="field">
            <%= form.label :youtbe %>
            <%= form.text_field :youtube %>
          </div>


          <div class="actions">
            <%= button_tag t('button_topic_create') %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">OK</button>
      </div>
    </div>
  </div>
</div>



  <table class="ichiran">
  <% @topics.each do |topic| %>
    <tr>
      <% if topic.image.present?%>
      <td><%= image_tag topic.image.url, class:"topic_icon" %></td>
      <%end%>
      <td><%= topic.name%></td>
      <td><%= topic.posts.count%>posts</td>
      <td><%= link_to t('view topic'), topic_path(topic.id), data: {"turbolinks" => false} %></td>
      <td><%= link_to t('edit'), edit_topic_path(topic.id)%></td>
      <td><%= link_to t('delete'), topic_path(topic.id), method: :delete %></td>
    </tr>
  <% end %>
  </table>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
