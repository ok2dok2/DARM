<%= form_with(model: @topic) do |form| %>
<div class="field">
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<p>掲示板一覧</p>
  <% @topics.each do |topic| %>
    <%= topic.name%>
    <%= link_to '掲示板を見る', topic_path(topic.id)%>
    <%= link_to '編集', edit_topic_path(topic.id)%>
    <%= link_to '削除', topic_path(topic.id), method: :delete %>
  <% end %>